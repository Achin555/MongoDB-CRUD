<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items List</title>
</head>
<body>
    <h1>Items List</h1>
    <ul>
        <% items.forEach(item => { %>
            <li>Name: <%= item.name %>, Description: <%= item.description %>, Price: <%= item.price %></li>
            <form action="/items/<%= item._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
            </form>
            <a href="/items/<%= item._id %>/edit">Edit</a>
        <% }); %>
    </ul>
    <a href="/items/new">Create New Item</a>
</body>
</html>
